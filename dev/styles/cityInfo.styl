.currentCityInfoWrapper
  margin-top: 25px;

  .currentDate
    margin-left: 15px;

  .cityInfo
    text-align: center;

  .currentCity
    font-size: 2em;

  .currentTemperature,
  .currentDegrees
    font-weight: bold;
    font-size: 2.5em;

  .currentDegrees
    margin-left: 0.2em;

  .currentWeather
    display: inline-block;

  .currentTotalWeather
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;

  .sunIcon
    width: 25px;
    height 25px;

  .currentTotalIndicators
    margin-top: 0.5em;
    padding: 0.5em 15px;
    background-color: #F5F5F5;

  .indicator
    display: inline-block;
    margin-left: 1em;
    &:first-child
      margin-left: 0;
    .indicatorName
      font-weight: bold;
      margin-right: 0.2em;