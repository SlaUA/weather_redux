.chartWrapper
  margin-top: 45px;

  .forecastHeader
    font-weight: bold;
    font-size: 1.2em;
    margin-left: 15px;

  .chartTabs

    .tabHeaders
      display: flex;
      margin-left: 15px;

    .tabHeader
      padding: 5px;
      border-top: 1px solid #E3E3E3;
      border-right: 1px solid #E3E3E3;
      border-bottom: 1px solid #E3E3E3;
      &:first-child
        border-left: 1px solid #E3E3E3;
      &.active
        border-bottom: none;
        background-color: #F5F5F5;

    .tabsContent
      background-color: #F5F5F5;
      min-height: 315px;

      .tabContent.active
        display: block;

      .tabContent
        padding: 15px;
        display: none;
