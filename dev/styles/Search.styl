.searchWrapper
    height: 60px;
    display: flex;
    background-color: #F5F5F5;
    padding: 5px 15px;
    box-shadow: 0 3px 10px #e7e7e7;

.topDescription
    display: inline-block;
    flex-grow: 1;

.sunIcon
    display: inline-block;
    width: 45px;
    height: 45px;
    background-image: url('../img/sunIcon.svg');
    background-size: contain;
    background-position: center;
    background-repeat: no-repeat;
    margin-right: 15px;

.topDescription
    flex-grow: 1;
    min-width: 80px;
    display: flex;
    align-content: center;
    align-items: center;
    align-self: center;

.locationSearch
    height: 35px;
    align-self: center;
    padding: 0 10px;
    width: 30%;
    border: 1px solid #E7E7E7;

.locationSearch:focus
    outline: none;


